<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../../layout/head') %>
      </head>

<body>
    <header>
        <%- include('../../layout/header') %>
      </header>
  <main>
   
      <p>
        <%= result.title %>
      </p>
      <p>
          <%= result.author %>
      </p>
      <p>
        <%= result.isbn %>
    </p>
      <img src=<%= result.image_url %> >
      <p>
        <%= result.description %>
